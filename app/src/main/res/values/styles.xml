<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="activity">
        <item name="android:background">#fff</item>
    </style>

    <style name="exhibitors_letter"></style>

    // profile

    <style name="profile_head">
        <item name="android:textColor">#3399CC</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/profile_head_size</item>
    </style>

    <style name="profile_text">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/profile_text_size</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="profile_container">
        <item name="android:background">@drawable/profile_border_bottom</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center|left</item>
    </style>


    // layout

    <style name="oritentation_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="oritentation_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="login_edittext">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/background_login_edittext</item>
    </style>

    <style name="login_singin">
        <item name="android:textSize">@dimen/login_text_singin</item>
        <item name="android:background">@drawable/background_signin</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
