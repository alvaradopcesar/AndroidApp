<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_event_padding"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_event_text1_size"
        android:textColor="#510474"
        android:gravity="center"
        android:text="Ask a question?"/>
    <EditText
        android:id="@+id/editAskEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_event_padding"
        android:layout_marginLeft="@dimen/dialog_event_padding"
        android:layout_marginRight="@dimen/dialog_event_padding"
        android:maxLength="200"
        android:textSize="@dimen/dialog_event_text1_size"
        android:textColor="#510474"
        android:text=""
        android:background="#fff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dialog_event_padding"
        android:layout_marginRight="@dimen/dialog_event_padding"
        android:layout_marginBottom="@dimen/dialog_event_padding"
        android:background="#510474"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnAskEventSubmit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_event_button_height"
            android:layout_weight="1.5"
            android:textSize="@dimen/dialog_event_text3_size"
            android:textColor="#510474"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/bg_dialog_ask_event_button"
            android:text="Submit"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>