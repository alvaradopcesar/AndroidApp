<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/evening_model_detail_height"
    android:background="#fff">

    <ImageView
        android:layout_width="@dimen/evening_model_point_size"
        android:layout_height="@dimen/evening_model_point_size"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/AssistantPhoto"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_event_img2" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/AssistantPhoto"
        android:layout_toEndOf="@+id/AssistantPhoto">

        <TextView
            android:id="@+id/txtEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#666666"
            android:textSize="@dimen/evening_model_detail_name_size"
            android:text="Amon Allardice"/>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20sp"
        android:id="@+id/imageView4"
        android:src="@drawable/ic_evening_row_rigth"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View android:visibility="gone"
        android:id="@+id/viewEventLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#AA9D7D"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>